{
  "name": "@jjangga0214/monorepo",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "pkg": "yarn workspace @jjangga0214/$PACKAGE",
    "start": "lerna run --parallel start",
    "dev": "lerna run --parallel dev --scope '{@jjangga0214/api,@jjangga0214/hasura,@jjangga0214/hasura-transformer}'",
    "build": "lerna run --parallel build",
    "build:fresh": "yarn clean && yarn build",
    "build:image": "cross-env DOCKER_BUILDKIT=1 docker build --build-arg PACKAGE=$PACKAGE -t $IMAGE_REGISTRY/$PACKAGE:$IMAGE_TAG .",
    "clean": "shx rm -rf .build-cache *.log coverage junit.xml && lerna run clean",
    "test": "jest",
    "test:ci": "jest --coverage --ci --reporters='jest-junit'",
    "test:unit": "jest packages/*/test/unit",
    "test:integration": "jest packages/*/test/integration",
    "coverage": "jest --coverage",
    "coverage:unit": "yarn test:unit --coverage",
    "coverage:integration": "yarn test  :integration --coverage",
    "coverage:show": "live-server coverage",
    "lint": "eslint --ext js --ext ts --ext md",
    "lint:ci": "yarn lint . --format junit",
    "lint:md": "markdownlint --ignore node_modules --ignore .git",
    "format": "yarn lint --fix",
    "format:md": "yarn lint:md --fix",
    "husky-skip": "cross-env HUSKY_SKIP_HOOKS=1",
    "commit": "git cz"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.md": [
      "yarn lint:md --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/jest": "^24.0.23",
    "@types/mongoose": "^5.5.43",
    "@types/node": "^12.7.5",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "commitizen": "^4.0.3",
    "cross-env": "^6.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "del-cli": "^3.0.0",
    "dotenv-cli": "^3.1.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.9.0",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.1.0",
    "jest": "^24.7.1",
    "jest-junit": "^10.0.0",
    "lerna": "^3.13.2",
    "link-module-alias": "^1.2.0",
    "lint-staged": "^8.1.5",
    "live-server": "^1.2.1",
    "markdownlint-cli": "^0.20.0",
    "prettier": "^1.16.4",
    "serve": "^11.2.0",
    "ts-jest": "^24.2.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.4.3"
  }
}
