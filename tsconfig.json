{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": "packages",
    "paths": {
      "@jjangga0214/*": ["*/src"],
      "~hello/*": ["hello/src/*"],
      "~api/*": ["api/src/*"],
      "~auth/*": ["auth/src/*"],
      "~communication/*": ["communication/src/*"],
      "~graphql-gateway/*": ["graphql-gateway/src/*"],
      "~hasura-transformer/*": ["hasura-transformer/src/*"],
      "~history/*": ["history/src/*"],
      "~history-db/*": ["history-db/src/*"],
      "~history-trigger/*": ["history-trigger/src/*"],
      "~pulumi/*": ["pulumi/src/*"],
      "~stitching-gateway/*": ["stitching-gateway/src/*"],
      "~*": ["*/src"]
    },
    "strict": true,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "incremental": true,
    "resolveJsonModule": true
  }
}
